@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<style>
    .custom-navbar {
        background-color: #2d2b2b; /* Replace with your desired background color */
        color: white; /* Text color */
        border-bottom: 1px solid #444444; /* Optional: Add a subtle border */
    }

    .custom-navbar .navbar-brand {
        color: #007bff; /* Brand name color */
        font-weight: bold;
        font-size: 2rem;
    }

    .custom-navbar .navbar-brand:hover {
        color: #ffffff; /* Brand name color */
        font-weight: bold;
        font-size: 2rem;
    }

    .custom-navbar .nav-link {
        color: #ffffff; /* Links color */
    }

    .custom-navbar .nav-link:hover {
        color: #4cb1ae; /* Links hover color */
    }

    .navbar-nav .nav-item .nav-link {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; /* Apple-style font */
        font-size: 16px; /* Adjust the font size */
        color: #ffffff; /* Change text color */
        border: 1px solid #007bff; /* Optional: Add a border */
        padding: 10px 15px; /* Space inside the buttons */
        border-radius: 5px; /* Rounded corners */
        text-align: center; /* Center-align text */
        text-decoration: none; /* Remove underline */
        transition: background-color 0.3s ease; /* Add hover effect transition */
        margin-right: 10px;
    }

    .navbar-nav .nav-item .nav-link:hover {
        background-color: #007bff; /* Change background color on hover */
        color: #ffffff; /* Maintain text color on hover */
    }

    .navbar-nav .nav-item .nav-link:active {
        background-color: #0056b3; /* Active button background */
        color: #ffffff; /* Active button text */
    }

    /* Ensure the page takes full height */
    html, body {
        height: 100%;
        margin: 0;
    }

    /* Flex container for the page layout */
    .container {
        display: flex;
        flex-direction: column;
        min-height: 100%;
    }

    /* Makes sure the main content area expands to fill available space */
    main {
        flex: 1;
    }

    /* Ensure footer stays at the bottom */
    #main-footer {
        margin-top: auto; /* Pushes the footer to the bottom */
    }

</style>

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/eLibrary.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@ViewData["Title"]</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer id="main-footer" class="border-top footer">
    <div class="container">
        &copy; 2024 - eLibrary<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
