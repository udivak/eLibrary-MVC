@using Microsoft.AspNetCore.Mvc.TagHelpers
@model eLibrary.Models.User
@{
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
<link rel="stylesheet" href="~/css/_layout.css" asp-append-version="true"/>

<div class="container mt-5">
    <h1 class="text-center mb-4">Sign Up</h1>
    <div class="card shadow p-4 bg-transparent transparent-card">
        <form action="@Url.Action("RegistrationSubmit", "User")" method="post">
            <div class="row">
                <!-- First Name -->
                <div class="col-md-6 mb-3">
                    <label for="Text1" class="form-label text-white">First Name</label>
                    <input id="Text1" name="FirstName" type="text" class="form-control" placeholder="Enter your first name"/>
                    @Html.ValidationMessageFor(x => x.FirstName)
                </div>
                <!-- Last Name -->
                <div class="col-md-6 mb-3">
                    <label for="Text2" class="form-label text-white">Last Name</label>
                    <input id="Text2" name="LastName" type="text" class="form-control" placeholder="Enter your last name"/>
                    @Html.ValidationMessageFor(x => x.LastName)
                </div>
            </div>
            <div class="row">
                <!-- Username -->
                <div class="col-md-6 mb-3">
                    <label for="Text3" class="form-label text-white">Username</label>
                    <input id="Text3" name="UserName" type="text" class="form-control" placeholder="Choose a username"/>
                    @Html.ValidationMessageFor(x => x.UserName)
                </div>
                <!-- Password -->
                <div class="col-md-6 mb-3">
                    <label for="Text4" class="form-label text-white">Password</label>
                    <div class="d-flex align-items-center">
                        <input id="Text4" name="Password" type="password" class="form-control me-2" placeholder="Enter your password"/>
                        @Html.ValidationMessageFor(x => x.Password)
                        <div class="form-check">
                            <input type="checkbox" id="togglePassword" class="form-check-input" />
                            <label for="togglePassword" class="form-check-label text-white">Show Password</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Email -->
                <div class="col-md-6 mb-3">
                    <label for="Text5" class="form-label text-white">Email</label>
                    <input id="Text5" name="Email" type="email" class="form-control" placeholder="Enter your email"/>
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <!-- Address -->
                <div class="col-md-6 mb-3">
                    <label for="Text6" class="form-label text-white">Address</label>
                    <input id="Text6" name="Address" type="text" class="form-control" placeholder="Enter your address"/>
                    @Html.ValidationMessageFor(x => x.Address)
                </div>
            </div>
            <!-- Submit Button -->
            <div class="text-center">
                <br />
                <input id="Submit" type="submit" value="Submit" class="btn btn-lg btn-primary"/>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // JavaScript to toggle password visibility
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('Text4');

    togglePassword.addEventListener('change', () => {
        passwordInput.type = togglePassword.checked ? 'text' : 'password';
    });
</script>


