@Model eLibrary.Models.User

@*<!DOCTYPE html>*@

<html>
<head>
    <title>Sign Up</title>
</head>
<body>
<h1> Insert your details and press Submit :</h1>
<div>
    <form action="RegistrationSubmit" method="post">
        First Name: <input id="FirstName" name="FirstName" type="text"/>
        <br/>
        Last Name: <input id="LastName" name="LastName" type="text"/>
        <br/>
        Username: <input id="UserName" name="UserName" type="text"/>
        <br/>
        Password: <input id="Password" name="Password" type="text"/>
        <br/>
        Email: <input id="Email" name="Email" type="text"/>
        <br/>
        Address: <input id="Address" name="Address" type="text"/>
        <br/>
        <input id="Submit" type="submit" value="Submit"/>
    </form>
</div>
</body>
</html>