@Model eLibrary.Models.User
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
    <h1 class="text-center mb-4">Sign Up</h1>
    <div class="card shadow p-4">
        <form action="RegistrationSubmit" method="post">
            <!-- First Name -->
            <div class="mb-3">
                <label for="Text1" class="form-label">First Name</label>
                <input id="Text1" name="FirstName" type="text" class="form-control" placeholder="Enter your first name" />
            </div>
            <!-- Last Name -->
            <div class="mb-3">
                <label for="Text2" class="form-label">Last Name</label>
                <input id="Text2" name="LastName" type="text" class="form-control" placeholder="Enter your last name" />
            </div>
            <!-- Username -->
            <div class="mb-3">
                <label for="Text3" class="form-label">Username</label>
                <input id="Text3" name="UserName" type="text" class="form-control" placeholder="Choose a username" />
            </div>
            <!-- Password -->
            <div class="mb-3">
                <label for="Text4" class="form-label">Password</label>
                <div class="d-flex align-items-center">
                    <input id="Text4" name="Password" type="password" class="form-control me-2" placeholder="Enter your password" />
                    <div class="form-check">
                        <input type="checkbox" id="togglePassword" class="form-check-input" />
                        <label for="togglePassword" class="form-check-label">Show Password</label>
                    </div>
                </div>
            </div>
            <!-- Email -->
            <div class="mb-3">
                <label for="Text5" class="form-label">Email</label>
                <input id="Text5" name="Email" type="email" class="form-control" placeholder="Enter your email" />
            </div>
            <!-- Address -->
            <div class="mb-3">
                <label for="Text6" class="form-label">Address</label>
                <input id="Text6" name="Address" type="text" class="form-control" placeholder="Enter your address" />
            </div>
            <!-- Submit Button -->
            <div class="text-center">
                <input id="Submit" type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // JavaScript to toggle password visibility
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('Text4');

    togglePassword.addEventListener('change', () => {
        passwordInput.type = togglePassword.checked ? 'text' : 'password';
    });
</script>
</body>
</html>


