@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<eLibrary.Models.WaitingListViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Waiting List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="~/css/_MyBooks.css" rel="stylesheet" asp-append-version="true">
</head>
<body class="bg-gray-50">
<div class="container" style="margin-left: 15px">
    <div class="card w-full">
        <div class="card-header bg-[#007bff] text-white p-6">
            <h3 class="text-2xl font-semibold leading-none tracking-tight" style="color: black">My Waiting List</h3>
        </div>
        <div class="card-content p-6">
            <div class="scroll-area h-[600px] overflow-y-auto">
                <ul class="list-none p-0 space-y-4" id="waitingList">
                    @foreach (var book in Model)
                    {
                        <li class="book-item">
                            <div class="book-details">
                                <a href="@Url.Action("BookDetails", "Book", new { isbn = book.BookISBN })" class="book-link">
                                    @book.BookTitle
                                </a>
                                <div class="book-info">
                                    <p>
                                        Quantity: @book.QuantityRequested
                                    </p>
                                    <p>
                                        Status: @book.Status
                                    </p>
                                    <p class="text-muted">
                                        Added on: @book.AddedDate.ToString("MM/dd/yyyy")
                                    </p>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
