@model eLibrary.Models.Book
@{
    Layout = "_Layout";
}
<style>
    .mt-5 {
        margin-top: 0;
        padding-top: 0;
        background-color: #2d2b2b;
    }
    
    .card-body {
        background-color: #2d2b2b;
        color : #ffffff;
    }
    
    .card-footer {
        background-color: #0d6efd;
        color : #ffffff;
    }
</style>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Book Details</h4>
        </div>
        <div class="card-body">
            <p><strong>Title:</strong> @Model.Title</p>
            <p><strong>Author:</strong> @Model.Author</p>
            <p><strong>ISBN:</strong> @Model.isbnNumber</p>
            <p><strong>Publisher:</strong> @Model.Publisher</p>
            <p><strong>Year:</strong> @Model.Year</p>
            <p><strong>Buy Price:</strong> @Model.BuyPrice$</p>
            <p><strong>Borrow Price:</strong> @Model.BorrowPrice$</p>
            <p><strong>Age Limit:</strong> @Model.AgeLimit+</p>
            <p><strong>Genre:</strong> @Model.Genre</p>
            <p><strong>Format:</strong> @Model.Format</p>
            @if (Model.Format == "Physical")
            {
                <p><strong>Quantity:</strong> @Model.Quantity</p>
            }
            
        </div>
        <div class="card-footer text-end">
            <a href="/Book/AddBook/" class="btn btn-warning">Edit</a>
            <!--a href="/Book/AddBookSubmit/" class="btn btn-success">Add to Library</--a-->
            <form asp-action="AddBookSubmit" asp-controller="Book" method="post" style="display:inline;">
                <input type="hidden" name="Title" value="@Model.Title" />
                <input type="hidden" name="Author" value="@Model.Author" />
                <input type="hidden" name="isbnNumber" value="@Model.isbnNumber" />
                <input type="hidden" name="Publisher" value="@Model.Publisher" />
                <input type="hidden" name="Year" value="@Model.Year" />
                <input type="hidden" name="BuyPrice" value="@Model.BuyPrice" />
                <input type="hidden" name="BorrowPrice" value="@Model.BorrowPrice" />
                <input type="hidden" name="AgeLimit" value="@Model.AgeLimit" />
                <input type="hidden" name="Genre" value="@Model.Genre" />
                <input type="hidden" name="Format" value="@Model.Format" />
                <input type="hidden" name="Quantity" value="@Model.Quantity" />
                <button type="submit" class="btn btn-success">Add to Library</button>
            </form>
            <a href="/Book/DeleteBook/" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

