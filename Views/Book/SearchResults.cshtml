@model IEnumerable<eLibrary.Models.Book>
@{
    ViewBag.Title = "Search Results";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
<link rel="stylesheet" href="~/css/_layout.css" asp-append-version="true"/>
<link rel="stylesheet" href="/css/SearchResults.css" asp-append-version="true">

<div class="spinner-container" id="spinner">
    <div class="spinner">
        Loading
        <div class="spinner-sector spinner-sector-hard_blue"></div>
        <div class="spinner-sector spinner-sector-blue"></div>
        <div class="spinner-sector spinner-sector-soft-blue"></div>
    </div>
</div>

<div id="content" style="display: none;">
    <h2>Search Results</h2>
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Publisher</th>
                <th>Year</th>
                <th>Genre</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Publisher</td>
                    <td>@book.Year</td>
                    <td>@book.Genre</td>
                    <td>
                        <a asp-action="BookDetails" asp-route-id="@book.isbnNumber" class="btn btn-link">View Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No books found matching the criteria.</p>
    }
</div>

<script>
    // Wait 2 seconds, then show content and hide spinner
    window.addEventListener('DOMContentLoaded', function () {
        setTimeout(() => {
            document.getElementById('spinner').style.display = 'none';
            const content = document.getElementById('content');
            content.style.display = 'block';
            content.classList.add('show'); // Add fade-in effect
        }, 2000);

    });
</script>