@model eLibrary.Models.Book
@{
    Layout = "_Layout";
    ViewData["Title"] = "Verify Details";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
<link rel="stylesheet" href="~/css/_layout.css" asp-append-version="true"/>
<link rel="stylesheet" href="~/css/BookDetails.css" asp-append-version="true"/>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Book Details</h4>
        </div>
        <div class="card-body">
            <p class="data"><strong>Title: </strong> @Model.Title</p>
            <p class="data"><strong>Author:</strong> @Model.Author</p>
            <p class="data"><strong>ISBN:</strong> @Model.ISBN</p>
            <p class="data"><strong>Publisher:</strong> @Model.Publisher</p>
            <p class="data"><strong>Year:</strong> @Model.Year</p>
            <p class="data"><strong>Buy Price:</strong> @Model.BuyPrice$</p>
            <p class="data"><strong>Borrow Price:</strong> @Model.BorrowPrice$</p>
            <p class="data"><strong>Age Limit:</strong> @Model.AgeLimit+</p>
            <p class="data"><strong>Genre:</strong> @Model.Genre</p>
            <p class="data"><strong>Format:</strong> @Model.Format</p>
            @if (Model.Format == "Physical")
            {
                <p><strong>Quantity:</strong> @Model.Quantity</p>
            }
        </div>
        <div class="card-footer text-end">
            <button type="button" class="btn btn-secondary btn-back" onclick="window.history.back()">Back</button>
            
            <a asp-action="EditBook" asp-controller="Book" asp-route-Title="@Model.Title"
               asp-route-Author="@Model.Author" asp-route-isbnNumber="@Model.ISBN"
               asp-route-Publisher="@Model.Publisher" asp-route-Year="@Model.Year"
               asp-route-BuyPrice="@Model.BuyPrice" asp-route-BorrowPrice="@Model.BorrowPrice"
               asp-route-AgeLimit="@Model.AgeLimit" asp-route-Genre="@Model.Genre"
               asp-route-Format="@Model.Format" asp-route-Quantity="@Model.Quantity"
               class="btn btn-warning">Edit</a>

            <form asp-action="AddBookToLibrary" asp-controller="Book" method="post" style="display:inline;">
               <input type="hidden" name="Title" value="@Model.Title" />
                <input type="hidden" name="Author" value="@Model.Author" />
                <input type="hidden" name="isbnNumber" value="@Model.ISBN" />
                <input type="hidden" name="Publisher" value="@Model.Publisher" />
                <input type="hidden" name="Year" value="@Model.Year" />
                <input type="hidden" name="BuyPrice" value="@Model.BuyPrice" />
                <input type="hidden" name="BorrowPrice" value="@Model.BorrowPrice" />
                <input type="hidden" name="AgeLimit" value="@Model.AgeLimit" />
                <input type="hidden" name="Genre" value="@Model.Genre" />
                <input type="hidden" name="Format" value="@Model.Format" /> 
                <input type="hidden" name="Quantity" value="@Model.Quantity" /> 
                <button type="submit" class="btn btn-success">Add to Library</button>
            </form>
            <a href="/Book/DeleteBook/" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

