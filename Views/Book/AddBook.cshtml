@model eLibrary.Models.Book
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add a Book</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h2 class="text-center">Add a Book</h2>
    <form action="AddBookSubmit" method="post" class="p-4 border rounded shadow-sm bg-light">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" required>
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Author</label>
            <input type="text" class="form-control" id="author" name="author" required>
        </div>
        <div class="mb-3">
            <label for="isbnNumber" class="form-label">ISBN Number</label>
            <input type="text" class="form-control" id="isbnNumber" name="isbnNumber" required>
        </div>
        <div class="mb-3">
            <label for="publisher" class="form-label">Publisher</label>
            <input type="text" class="form-control" id="publisher" name="publisher">
        </div>
        <div class="mb-3">
            <label for="year" class="form-label">Year</label>
            <input type="number" class="form-control" id="year" name="year" required>
        </div>
        <div class="mb-3">
            <label for="buyPrice" class="form-label">Buy Price</label>
            <input type="number" class="form-control" id="buyPrice" name="buyPrice" required>
        </div>
        <div class="mb-3">
            <label for="borrowPrice" class="form-label">Borrow Price</label>
            <input type="number" class="form-control" id="borrowPrice" name="borrowPrice" required>
        </div>
        <div class="mb-3">
            <label for="ageLimit" class="form-label">Age Limit</label>
            <input type="number" class="form-control" id="ageLimit" name="ageLimit">
        </div>
        <div class="mb-3">
            <label for="format" class="form-label">Format</label>
            <select class="form-select" id="format" name="format" required>
                <option value="" disabled selected>Select a format</option>
                <option value="PDF">PDF</option>
                <option value="ePub">ePub</option>
                <option value="f2b">f2b</option>
                <option value="mobi">mobi</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary w-100">Add Book</button>
    </form>
</div>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
