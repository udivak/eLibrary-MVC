
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model eLibrary.Models.Book
@{
    Layout = "_Layout";
    ViewData["Title"] = "Add a Book";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
<link rel="stylesheet" href="~/css/_layout.css" asp-append-version="true"/>
<link rel="stylesheet" href="~/css/AddBook.css" asp-append-version="true"/>


<div class="container mt-5">
    <h1 class="text-center">Add a Book</h1>
    <form action="@Url.Action("ConfirmAddBook", "Book")" method="post" class="p-4 border rounded shadow-sm top-0">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="Title" value="@Model.Title"> @Html.ValidationMessageFor(x => x.Title)
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Author</label>
            <input type="text" class="form-control" id="author" name="Author" value="@Model.Author"> @Html.ValidationMessageFor(x => x.Author)
        </div>
        <div class="mb-3">
            <label for="isbnNumber" class="form-label">ISBN Number</label>
            <input type="text" class="form-control" id="isbnNumber" name="isbnNumber" value="@Model.isbnNumber"> @Html.ValidationMessageFor(x => x.isbnNumber)
        </div>
        <div class="mb-3">
            <label for="publisher" class="form-label">Publisher</label>
            <input type="text" class="form-control" id="publisher" name="Publisher" value="@Model.Publisher"> @Html.ValidationMessageFor(x => x.Publisher)
        </div>
        <div class="mb-3">
            <label for="year" class="form-label">Year</label>
            <input type="number" class="form-control" id="year" name="Year" value="@Model.Year"> @Html.ValidationMessageFor(x => x.Year)
        </div>
        <div class="mb-3">
            <label for="buyPrice" class="form-label">Buy Price</label>
            <input type="number" class="form-control" id="buyPrice" name="BuyPrice" value="@Model.BuyPrice"> @Html.ValidationMessageFor(x => x.BuyPrice)
        </div>
        <div class="mb-3">
            <label for="borrowPrice" class="form-label">Borrow Price</label>
            <input type="number" class="form-control" id="borrowPrice" name="BorrowPrice" value="@Model.BorrowPrice"> @Html.ValidationMessageFor(x => x.BorrowPrice)
        </div>
        <div class="mb-3">
            <label for="ageLimit" class="form-label">Age Limit</label>
            <input type="number" class="form-control" id="ageLimit" name="AgeLimit" value="@Model.AgeLimit">
        </div>
        <div class="mb-3">
            <label for="genre" class="form-label">Genre</label>
            <input type="text" class="form-control" id="genre" name="Genre" value="@Model.Genre"> @Html.ValidationMessageFor(x => x.Genre)
        </div>
        <div class="mb-3">
            <label for="format" class="form-label">Format</label>
            <select class="form-select" id="format" name="Format" required>
                <option value="" disabled selected>Select a format</option>
                <option value="PDF">PDF</option>
                <option value="ePub">ePub</option>
                <option value="f2b">fb2</option>
                <option value="mobi">mobi</option>
                <option value="Physical">Physical</option>
            </select>
        </div>
        <div class="mb-3" id="quantityField" style="display: none;">
            <label for="Quantity" class="form-label">Quantity</label>
            <input type="number" class="form-control" id="quantity" name="Quantity">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Add Book</button>
        </div>
    </form>
</div>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Validations -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(document).ready(function () {
        $('#format').change(function () {
            if ($(this).val() === 'Physical') {
                $('#quantityField').show();
            } else {
                $('#quantityField').hide();
            }
        });
    });
</script>

